let diaDoAno = data.toLocaleString("pt-PT",{day:"numeric"}) // 2
let mes = data.toLocaleString("pt-PT",{month:"long"}) // março
let ano = data.toLocaleString("pt-PT",{year:"numeric"}) // 1999





























